{
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2017
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-console": "warn",
        "indent": ["error", 2],
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "linebreak-style": ["error", "unix"],
        "react/jsx-uses-vars": ["error"],
        "no-unused-vars": ["error", { "varsIgnorePattern": "^h$" }]
    }
}
